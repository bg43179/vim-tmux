function rsvim {
    conf="
        let g:enable_rsync  = 1
        let g:rsync_remote  = '$1'
        let g:rsync_local   = '$2'
    "
    dir=$(echo $1 | rev | cut -d'/' -f-1 | rev)
    rsync -avr --exclude=data $1 $2
	echo $conf > $dir/.exrc
}

# replace gf functionality. jump to file by file name
function ctag {
    ctags -R --extra=+f .
    awk '
        match($1, /.*\./) {
            file=substr($1, RSTART, RLENGTH-1)
        }
        {
            if ($1 ~ /.*\./) {
                #print $1
                print file"\t"$2"\t"$3"\t"$4
            }
            else {
                print $0
            }
        }
    ' tags | rev | rev >  .tags
    rm tags
}

# edit the selected bash config file
function zshrc {
    if [[ "$1" == "f" ]]; then
        vim ~/.zsh_functions
    else
        vim ~/.zshrc
    fi
}
function leet {
    name=''
    for part in "$@"
    do
        name=$name$part 
    done

code="import java.util.*;

public class $name {
	public static void main(String[] args) {
		$name tester = new $name();
		tester.unitTest();
	}
	public void unitTest() {

	}
}"
    leetcode
    echo $code > $name.java
    vim $name.java
}

function javat {
code="import java.util.*;

public class $1{\n\tpublic static void main(String[] args) {\n\n\t}\n}"; 
	cdd
	echo $code > $1.java
	vim $1.java
}

# shortcut for compiling and running Java programs (I use this for competitions)
function jj {
    filename="${1%.*}"
    javac $filename.java
    if [[ $? == 0 ]]; then
       java $filename
    fi
}
